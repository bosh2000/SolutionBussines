@using SolutionBussines.Models.ViewModel;
@model EditOrderItemDto;
@{}
<form class="row g-3 needs-validation" validate method="post" enctype="multipart/form-data">
    <input type="hidden" name="OrderId" asp-for="@Model.OrderId">
    <input type="hidden" name="Id" asp-for=@Model.Id>
    <div class="form-floating col-md-4">
        <input type="text" class="form-control" name="Name" asp-for=@Model.Name required>
        <label class="form-label">Наименование</label>
    </div>
    <div class="form-floating col-md-4">
        <input type="text" class="form-control" asp-for=@Model.Quantity name="Quantity" required>
        <label class="form-label">Количество</label>
    </div>
    <div class="form-floating col-md-4">
        <input type="text" class="form-control" asp-for=@Model.Unit name="Unit" required>
        <label class="form-label">Упаковка</label>
    </div>
    <span data-valmsg-for="Name" asp-validation-for="@Model.Name" class="text-danger"></span>
    <button class="btn btn-outline-success" type="submit" asp-page-handler="SaveEditItem"><i class="bi bi-check-circle"></i><span>Добавить</span></button>
</form>
<partial name="_ValidationScriptsPartial" />